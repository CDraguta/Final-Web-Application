@model IEnumerable<WebApplication1.Models.Carte>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
@if (Request.Cookies["manager"] != null)
{
    <p>
        @Html.ActionLink("Adauga carte", "AddCarte") 
    </p>
}
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriere)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nume)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Imagine)" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pret) lei
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descriere)
        </td>
        @if (Request.Cookies["manager"] != null)
        {
            <td>

                @Html.ActionLink("Editeaza", "Edit", new { id = item.Id }) |

                @Html.ActionLink("Sterge", "Delete", new { id = item.Id })

            </td>
        }
             @if (Request.Cookies["userLogat"] != null)
             {
            <td>
                <a href="/Cos/AddtoCart/@item.Id" onclick="alert('Ai adaugat un produs in cosul de cumparaturi.');" >
                    <img src="https://www.pngkit.com/png/detail/134-1343890_shopping-cart-png-image-shopping-cart-icon-svg.png" width="30" />
                </a>
            </td>
             }
             else
             {
                 <td>
                     <a href="#" onclick="alert('Trebuie sa fii logat pentru a putea adauga produse in cosul de cumparaturi!');" >
                  <img src="https://www.pngkit.com/png/detail/134-1343890_shopping-cart-png-image-shopping-cart-icon-svg.png" width="30" />
                     </a>
                 </td>
             }

    </tr>
    }
    </table>
