@model WebApplication1.Models.Reteta

@{
    ViewBag.Title = "AddRetete";
}

<h2>Adauga reteta</h2>

@using (Html.BeginForm("AddRetete", "Retete", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nume, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nume, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nume, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataPublicare, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataPublicare, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DataPublicare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipMasa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TipMasa, new SelectList(new string[] { "Pranz", "Fel principal", "Desert", "Aperitiv" }, "Pranz"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TipMasa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipBucatarie, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TipBucatarie, new SelectList(new string[] { "Romaneasca", "Asiatica", "Germana", "Italiana" }, "Romaneasca"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TipBucatarie, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FelMancare, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.FelMancare, new SelectList(new string[] { "Supe/Ciorbe", "Prajituri/Torturi", "Legume", "Peste" }, "Supe/Ciorbe"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FelMancare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descriere, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descriere, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descriere, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Imagine, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="ImageFile" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adauga" class="btn btn-default" onclick="reteta();" />
        </div>
    </div>

</div>

    <div>
        @Html.ActionLink("Catre retete", "Index")
    </div>
}

<script>
    function reteta() {
        alert('@TempData["SuccessMessageReteta"]');
            }
</script>

